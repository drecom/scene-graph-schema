{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "id": "/definitions/Node.json",

  "definitions": {
    "Node": {
      "id": "#Node",
      "type": "object",
      "properties": {
        "id": {
          "id": "#Node_id",
          "type": "string"
        },
        "name": {
          "id": "#Node_name",
          "type": "string"
        },
        "constructor": {
          "id": "#Node_constructor",
          "type": "string"
        },
        "transform": {
          "id": "#Node_transform",
          "$ref": "Transform.json#Transform"
        },

        "spine": {
          "id": "#Node_spine",
          "$ref": "Spine.json#Spine"
        },
        "sprite": {
          "id": "#Node_sprite",
          "$ref": "Sprite.json#Sprite"
        },
        "text": {
          "id": "#Node_text",
          "$ref": "Text.json#Text"
        }
      },
      "required": [
        "id",
        "name",
        "constructor",
        "transform"
      ]
    }
  }
}
